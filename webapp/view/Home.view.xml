<mvc:View
    controllerName="com.personal.usermanagement.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:m="sap.m"
    xmlns="sap.ui.table"
>
	<m:Page id="page" title="{i18n>title}" titleAlignment="Center">
		<m:content>
        <m:HBox id="map_canvas" fitContainer="true" justifyContent="Center" alignItems="Center" />
        <Table
				rows="{/results}"
				ariaLabelledBy="title"
                selectionMode="None">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text=""/>
                        <m:ToolbarSpacer/>
                        <m:Text text="Count ({/count})"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column >
						<m:Label text="Employee ID" />
						<template>
							<m:Text text="{empid}" wrapping="false" />
						</template>
					</Column>
                    <Column >
						<m:Label text="Employee Name" />
						<template>
							<m:Text text="{empname}" wrapping="false" />
						</template>
					</Column>
                    <Column >
						<m:Label text="Shift Time" />
						<template>
							<m:Text text="{path:'shift',formatter:'.formatter.shiftFormatter'}" wrapping="false" />
						</template>
					</Column>
                    <Column >
						<m:Label text="Status" /> 
						<template>
							<m:Text text="{status}" wrapping="false" />
						</template>
					</Column>
                    <Column >
						<m:Label text="Action" />
						<template>
							<!--<m:Button text="Edit Details" press="onHandleEditDetails"/>
                            <m:Button text="Manage Shift"/>-->
                            <m:MenuButton text="Edit Details">
			                <m:menu>
				                <m:Menu>
					                <m:MenuItem text="Edit" icon="sap-icon://edit" press="onHandleEditDetails"/>
					                <m:MenuItem text="Manage Shift" icon="sap-icon://open-folder" press="onPress" />
				                </m:Menu>
			                </m:menu>
		                    </m:MenuButton>
                        
						</template>
					</Column>
				</columns>
		    </Table>
        </m:content>
	</m:Page>

</mvc:View>